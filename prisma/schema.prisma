generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid()) 
  email     String   @unique
  password  String?
  name      String?
  orders    Order[]
  createdAt DateTime @default(now())
}

enum OrderStatus {
  Pending
  Delivered
  Returned
  Cancelled
}

model Order {
  id        String   @id @default(uuid())
  productId String
  userId    String
  amount    Int
  status    OrderStatus @default(Pending)
  user      User     @relation(fields: [userId], references: [id])
  pincode   Int
  city      String
  district  String
  state     String
  phone     Int
  alternatePhone Int?
  landmark  String
  rentFrom  DateTime
  rentTo    DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}